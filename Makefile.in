# $Id: Makefile.in,v 1.1 2002-04-23 20:15:19 ghudson Exp $

SHELL=/bin/sh
VPATH=@srcdir@
INSTALL=@INSTALL@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
srcdir=@srcdir@
top_srcdir=@top_srcdir@
prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
mandir=@mandir@

CC=@CC@
DEFS=@DEFS@
CPPFLAGS=@CPPFLAGS@
CFLAGS=@CFLAGS@
LDFLAGS=@LDFLAGS@
LIBS=@LIBS@
ALL_CFLAGS=`gnome-config --cflags gnomeui` ${CPPFLAGS} ${CFLAGS} ${DEFS}
ALL_LIBS=`gnome-config --libs gnomeui` ${LIBS}

all: mail-dialog

mail-dialog: mail-dialog.o
	${CC} ${LDFLAGS} -o $@ mail-dialog.o ${ALL_LIBS}

.c.o:
	${CC} -c ${ALL_CFLAGS} $<

check:

install:
	${top_srcdir}/mkinstalldirs ${DESTDIR}${bindir}
	${INSTALL_PROGRAM} mail-dialog ${DESTDIR}${bindir}

clean:
	rm -f mail-dialog.o mail-dialog

distclean: clean
	rm -f config.cache config.log config.status Makefile
